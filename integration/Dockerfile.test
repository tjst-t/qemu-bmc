FROM golang:1.23-bookworm

RUN apt-get update && apt-get install -y --no-install-recommends \
    ipmitool \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .

CMD ["go", "test", "-tags=integration", "-v", "-count=1", "-timeout=120s", "./integration/..."]
